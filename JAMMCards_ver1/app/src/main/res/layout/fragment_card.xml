<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/card_image"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>

        <com.co.jammcards.jammcards.DrawingView
            android:id="@+id/drawing_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:background="@null">

        </com.co.jammcards.jammcards.DrawingView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_flip_card_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/card_show"
            android:layout_marginEnd="29dp"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <CheckBox
            android:id="@+id/card_show"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/card_camera"
            android:layout_alignParentStart="true"
            android:text="Show in Quiz"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/card_text_hint" />

        <ImageButton
            android:id="@+id/card_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_camera" />


    </RelativeLayout>

</FrameLayout>